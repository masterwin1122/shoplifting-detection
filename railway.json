{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "phases": {
      "install": {
        "nixPkgs": ["libglvnd", "mesa", "ffmpeg"]
      }
    }
  },
  "start": "python app.py"
}
