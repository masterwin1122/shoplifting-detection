version: '3.8'

services:
  detection-service:
    build:
      context: .
    container_name: shoplifting-detection
    ports:
      - "8001:8000"  # map internal 8000 to external 8001
    volumes:
      - .:/app
    command: uvicorn main:app --host 0.0.0.0 --port 8000
    restart: always

  api-service:
    image: shoplifting-detection-api
    container_name: shoplifting-detection-api-1
    ports:
      - "8000:8000"  # already running here
    restart: always

